# Maintainer: Hoream<hoream@qq.com>
pkgname=uz801-firmware
pkgver=1.0
pkgrel=1
pkgdesc='Firmware for wifi stick uz801_v2.1 and uz801_v3.0'
arch=('aarch64')
url='https://alist.hoream.top/d/sources/%E9%9A%8F%E8%BA%ABWIFI/uz801_v3.0/firmware/firmware.tar.gz'
license=('Custom')
source=("firmware.tar.gz::${url}")
sha512sums=('SKIP')
options=('!strip')

package() {
    install -d "${pkgdir}"/usr/lib/firmware
    cp -r "${srcdir}/firmware/"* "${pkgdir}/usr/lib/firmware/"
}
