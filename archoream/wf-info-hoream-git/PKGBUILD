 # Maintainer Hoream <hoream@qq.com>

_pkgname=wf-info
pkgname="${_pkgname}-hoream-git"
pkgver=r13.022800f
pkgrel=1
pkgdesc="A simple wayfire plugin and program to get information from wayfire"
arch=(x86_64)
url="https://github.com/soreau/wf-info"
license=(unknow)
depends=(wayfire-hoream-git)
makedepends=(meson ninja pkg-config git cmake  wayland-protocols glm)
conflicts=("${_pkgname}")
provides=("${_pkgname}")
source=("git+https://github.com/soreau/wf-info.git"
        "wlroots-update.patch")
sha256sums=('SKIP'
            'SKIP')

prepare() {
    cd ${srcdir}/${_pkgname}
    git checkout 022800f180b1e6adfd4824c770ea9fd94ea4b5bf
}

pkgver() {
    cd $_pkgname
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	rm -rf build
    patch -b -d ${srcdir}/${_pkgname} -Np1 -i ${srcdir}/wlroots-update.patch
	arch-meson "${_pkgname}" build
	ninja -C build
}

check () {
	meson test -C build
}

package() {
	DESTDIR="${pkgdir}" ninja -C build install
}

