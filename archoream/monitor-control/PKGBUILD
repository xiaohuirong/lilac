# Maintainer: Hoream <2175223953@qq.com>
_pkgname="monitor-control"
pkgname="${_pkgname}-git"
pkgver=0.0.1
pkgrel=1
pkgdesc="A simple tool suitable for adjusting external monitor's brightness."
url='https://github.com/lilydjwg/monitor-control'
license=('GPL3')
arch=('x86_64')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
depends=()
makedepends=("cargo" "git")
source=(${_pkgname}::git+https://github.com/lilydjwg/monitor-control)
sha256sums=('SKIP')

# pkgver() {
#     cd "${srcdir}/${_pkgname}"
#     git describe --tags | sed -E 's/([^-]*-g)/r\1/;s/-/./g;s/^v//'
# }

build(){
 	cd "${srcdir}/${_pkgname}"
    cargo build --release
}

package() {
	install -d "${pkgdir}/usr/bin"
	install -Dm755 "${srcdir}/${_pkgname}/target/release/monitor-control" "${pkgdir}/usr/bin/monitor-control"
}
