# Maintainer: Hoream <hoream@qq.com>
_pkgname="matugen"
pkgname="${_pkgname}-git"
pkgver=2.2.0.r0.g5662775
pkgrel=1
pkgdesc="A material you color generation tool "
url="https://github.com/InioX/matugen"
license=("GPL-2.0")
arch=('x86_64')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
depends=()
makedepends=("cargo" "git")
source=(${_pkgname}::git+${url})
sha256sums=('SKIP')
options=('!lto')

prepare() {
    cd "${srcdir}/${_pkgname}"
    export RUSTUP_TOOLCHAIN=stable
    cargo fetch --locked --target "$CARCH-unknown-linux-gnu"
}

pkgver() {
  cd "${srcdir}/${_pkgname}"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g' | sed 's/^v//'
}

build(){
 	cd "${srcdir}/${_pkgname}"
    export RUSTUP_TOOLCHAIN=stable
    export CARGO_TARGET_DIR=target
    cargo build --frozen --release --all-features
}

check() {
    cd "${srcdir}/${_pkgname}"
    export RUSTUP_TOOLCHAIN=stable
    cargo test --frozen --all-features
}

package() {
	install -d "${pkgdir}/usr/bin"
	install -Dm755 "${srcdir}/${_pkgname}/target/release/${_pkgname}" "${pkgdir}/usr/bin/${pkg_name}"
    install -Dm644 "${srcdir}/${_pkgname}/LICENSE" -t "${pkgdir}/usr/share/licenses/${_pkgname}/"
}
